{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "skipLibCheck": false,
        "baseUrl": ".",
        "typeRoots": [
            "./src/types",
            "../shared/types/*",
            "node_modules/*"
        ],
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        }
    },
    "include": [
        "./src/*.ts",
        "../shared/*.ts"
    ],
}